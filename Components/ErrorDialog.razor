@if (Visible)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Error @Convert.ToInt32(Content.Code) (@Content.Code)</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="CloseDialog">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <b style="color:red">@Content.Message</b>
                </div>
            </div>
        </div>
    </div>
}
