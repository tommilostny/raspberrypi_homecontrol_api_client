@page "/heater-lcd"
@using RaspberryPiHomeControlApiClient.Components.Temperature
@using RaspberryPiHomeControlApiClient.Components.LCD

<style>
    input[type="text"] {
        width: 80%;
    }
    textarea {
        width: 100%;
        margin-top: 4px;
    }
</style>

<h1>LCD display @(_lineWidth)x@(_linesCount)</h1>

<LCD_Control LineWidth="@_lineWidth" LinesCount="@_linesCount" />

<br><br>

<div class="row">
    <div class="col-7">
        <TemperatureLog />
    </div>
    <div class="col">
        <TemperatureCard />
    </div>
</div>

@code
{
    private const int _lineWidth = 16;
    private const int _linesCount = 2;
}